<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <nav class="navbar">
      <div class="row">
        <div class="col-md-3 text-white">
          <i class="bi bi-arrow-left text-white"></i>
        </div>
        <div class="col-md-3">REGISTER</div>
        <div class="col-md-3"><%= f.submit "Next", class:("btn-login") %></div>
      </div>
    </nav>
    <div class="card-form">
      <div class="field profile-pic">
        <i class="bi bi-person-circle custom-icon"></i>
        <label>Upload picture</label>
      </div>
      <hr>
      <div class="field">
        <%= f.text_field :name, placeholder: "name", class:("input-auth") %>
      </div>
      <hr>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: "email", class:("input-auth") %>
      </div>
      <hr>
      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",  placeholder: "password", class:("input-auth") %>
      </div>
      <hr>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation", class:("input-auth")  %>
      </div>
    </div>
    <div class="text-center">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>