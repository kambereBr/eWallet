<div class="row total-amount-header">
  <div class="col-md-6">New Operation for <b><%= @group.name %></b></div>
</div>
<div class="container">
  <%= form_with(model: [@group, @operation], url: group_operations_path(@group), local: true) do |form| %>
    <div class="card-form">
      <div>
        <%= form.text_field :name, required: true, placeholder: "name",  class:("input-data") %>
      </div>
      <hr/>
      <div>
        <%= form.number_field :amount, required: true, placeholder: "amount",  class:("input-data") %>
      </div>
    </div>
    <div>
        <%= link_to 'Back', group_operations_path(@group), class:("btn btn-primary") %>
        <%= form.submit 'Create Operation',  class:("btn btn-success") %>
    </div>
  <% end %>
  
</div>
