<h1>New Operation for <%= @group.name %></h1>

<%= form_with(model: [@group, @operation], url: group_operations_path(@group), local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, required: true %>
  </div>

  <div>
    <%= form.submit 'Create Operation' %>
  </div>
<% end %>
<%= link_to 'Back', group_operations_path(@group), class:("goBackBtn") %>
